<%- include ("partials/header.ejs") %>
<div class = "ui main text container segment">
	<h1 class = "ui huge header"> <%= blog.title %> Edit Thread</h1>
	<form class = "ui form" action = "/blogs/<%=blog._id%>?_method=PUT" method="POST">
		<div class = "field">
			<label>Title</label>
			<input type="text" name="blog[title]" value = "<%= blog.title %>" placeholder="title">
		</div>
		<div class = "field">
			<label>Image</label>
			<input type="text" name="blog[image]" value = "<%= blog.image %>" placeholder="image">		
		</div>
		<div>
			<label>Body</label>
			<textarea name="blog[body]"><%= blog.body %></textarea>
		</div>
		<input type="submit" class = "ui purple big basic button">


	</form>
</div>
<%- include ("partials/header.ejs") %>
